<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/two_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/enter_sensor_id_corners"
        android:paddingStart="10dp"
        android:paddingEnd="40dp">

        <ImageView
            android:id="@+id/Enter_sensor_ID_img"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/icon_scan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/Enter_sensor_ID_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Enter_sensor_ID_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Scan_Code"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/Enter_sensor_ID_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/two_button"
        app:srcCompat="@android:color/white" />

</RelativeLayout>