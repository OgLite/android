<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag.Frag_Function_Program">

    <TextView
        android:id="@+id/read_MMY_Title2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/title_black"
        android:gravity="center"
        android:text="hello_blank_fragment"
        android:textColor="@color/white"
        android:textSize="21sp" />

    <LinearLayout
        android:id="@+id/Car_and_init"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/read_MMY_Title2"
        android:layout_marginStart="23dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="@string/Keep_other_sensors_7_cm_away"
            android:textColor="@color/title_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Car_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_weight="0.5"
            android:background="@mipmap/img_program_trigger_read" />

    </LinearLayout>

    <View
        android:id="@+id/view25"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/Car_and_init"
        android:layout_marginStart="23dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="23dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/Sensor_Data"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view25"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp">

        <View
            android:id="@+id/view19"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/WH_text"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@color/qr_code_background_color"
            android:gravity="center"
            android:text="WH"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/view20"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/Vehice_ID_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.60"
            android:background="@color/qr_code_background_color"
            android:gravity="center"
            android:text="@string/sensor_ID_number"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/view21"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/check_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/qr_code_background_color"
            android:gravity="center"
            android:text="@string/app_check"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/view22"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

    </LinearLayout>

    <View
        android:id="@+id/view26"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/Sensor_Data"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:background="@color/gray" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ShowReadView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/sending_data2"
        android:layout_below="@id/view26"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/sending_data2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/btn_rectangle"
        android:gravity="center"
        android:text="Sending data"
        android:textColor="@color/white"
        android:textSize="24sp" />
</RelativeLayout>